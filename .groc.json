{
  "root": ".",
  "glob": [
    "./**/*.js",
    "./*.js",
    "README.md"
  ],
  "except": [
    "./.git/**",
    "./node_modules/**",
    "./public/**",
    "./logs/**",
    "./data/**",
    "./scripts/**",
    "./views/**",
    "./uploads/**",
    "./docs/**",
    "./tests/**"
  ],

  "out": "./docs",
  "index": "README.md",

  "verbose": true,
  "very-verbose": true
}