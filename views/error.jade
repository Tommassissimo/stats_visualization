block append css
  link(rel='stylesheet', href='stylesheets/error.css')

block header
    h1= error.name

block content
  .row-fluid
    .span9
      .alert.alert-error= error.message
      h3 Stack trace
      pre.pre-scrollable.stack.text-error
        each line in stack
          span.line= line
