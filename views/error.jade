extends layout

block append css
  link(rel='stylesheet', href='stylesheets/error.css')

block header
  h1= error.name

block content
  .row
    .col-lg-9
      .alert.alert-error= error.message
      h3 Stack trace
      pre.pre-scrollable.stack.text-error
        each line in stack
          span.line= line
    .col-lg-3.hidden-phone
      img(src="img/mother-of-god.gif")